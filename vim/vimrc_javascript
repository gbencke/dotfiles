"
" Tested on VIM 7.4.2362
"
set hidden
set noswapfile
set expandtab
set ignorecase
set nowrap
set autoread
set hlsearch
set foldmethod=indent
set number
set relativenumber
set foldlevel=99
set showcmd
set splitbelow
set previewheight=30

" Shared Clipboard with Ubuntu 
set clipboard=unnamedplus

"My plugins
call plug#begin('~/.vim/plugged')
Plug 'https://github.com/Yggdroot/indentLine'
Plug 'vim-airline/vim-airline'
Plug 'vim-airline/vim-airline-themes'
Plug 'Chiel92/vim-autoformat'
Plug 'vim-syntastic/syntastic'
Plug 'https://github.com/Valloric/YouCompleteMe'
" HTML,CSS, JS Specifics...
Plug 'mattn/emmet-vim'
Plug 'cakebaker/scss-syntax.vim'
Plug 'https://github.com/pangloss/vim-javascript'
call plug#end()

set encoding=utf-8
set nu
set mouse=a

"Configure Status Line
if has('statusline')
      set laststatus=2
      set statusline=%<%f\    
      set statusline+=%w%h%m%r 
      set statusline+=%{fugitive#statusline()} 
      set statusline+=\ [%{&ff}/%Y]            
      set statusline+=\ [%{getcwd()}]          
      set statusline+=%#warningmsg#
      set statusline+=%*
      set statusline+=%=%-14.(%l,%c%V%)\ %p%%  
endif

colorscheme elflord

let g:airline_theme='monochrome'
let g:ycm_auto_trigger = 0
let g:ycm_keep_logfiles = 1
let g:ycm_log_level = 'debug'
let g:syntastic_python_checkers=['pylint']

autocmd VimEnter * SyntasticToggleMode

au BufNewFile,BufRead *.js *.html 
au BufNewFile,BufRead *.js *.html set tabstop=4
au BufNewFile,BufRead *.js *.html set softtabstop=4
au BufNewFile,BufRead *.js *.html set shiftwidth=4
au BufNewFile,BufRead *.js *.html set textwidth=79
au BufNewFile,BufRead *.js *.html set expandtab
au BufNewFile,BufRead *.js *.html set autoindent
au BufNewFile,BufRead *.js *.html set fileformat=unix

set tags=./tags;,tags

"No Syntax Highlighting
syntax off

noremap <Up> <NOP>
noremap <Down> <NOP>
noremap <Left> <NOP>
noremap <Right> <NOP>

noremap <F2> :Autoformat<CR>:w<CR>:echo "Formatado"<CR>
noremap <F3> :SyntasticCheck<CR>

